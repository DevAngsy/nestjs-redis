{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "lib": ["ES2021"],
        "outDir": "./dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "importHelpers": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["lib/*"]
        },
        "forceConsistentCasingInFileNames": true
    },
    "include": ["lib", "test"]
}
