{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "lib": ["ES2017"],
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "importHelpers": true,
        "incremental": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    }
}
